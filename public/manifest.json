{
  "manifest_version": 3,
  "name": "Ava: Voice Assistant",
  "description": "Voice assistant for the web",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "search"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
